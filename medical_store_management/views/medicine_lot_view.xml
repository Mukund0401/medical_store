<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record model="ir.ui.view" id="medicine_lot_tree_view">
        <field name="name">medicine.lot.tree.view</field>
        <field name="model">medicine.lot</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="manufacture_date"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="medicine_lot_form_view">
        <field name="name">medicine.lot.form.view</field>
        <field name="model">medicine.lot</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state_lot" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <form>
                        <group>
                            <field name="name"/>
                            <field name="medicine_id"/>
                            <field name="manufacture_date"/>
                            <field name="expiry_date"/>
                            <field name="quantity"/>
                        </group>
                    </form>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_medicine_lot_information" model="ir.actions.act_window">
        <field name="name">Medicine Lot Information</field>
        <field name="res_model">medicine.lot</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="medicine_lot" name="medicine Lot" parent="medicine_information" sequence="4" action="action_medicine_lot_information"/>
</odoo>