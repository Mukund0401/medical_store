<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="medicine_information_tree_view">
        <field name="name">medicine.information.tree.view</field>
        <field name="model">medicine.information</field>
        <field name="arch" type="xml">
            <tree>
                <field name="medicine_name"/>
                <field name="reference_no"/>
                <field name="company_name"/>
                <field name="expiry_date"/>
                <field name="symtops_id"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="medicine_information_form_view">
        <field name="name">medicine.information.form.view</field>
        <field name="model">medicine.information</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_symptoms_info"
                            type="object"
                            class="btn btn-primary"
                            string="Symptoms">
                    </button>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_health_symptoms)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-circle" string="Symptoms">
                        </button>
                    </div>
                    <group>
                        <field name="medicine_id"/>
                        <field name="medicine_name"/>
                        <field name="reference_no"/>
                        <field name="company_name"/>
                        <field name="is_major"/>
                    </group>
                    <group>
                        <field name="expiry_date"/>
                        <field name="manufacture_date"/>
                        <field name="symptoms_information_id"/>
                        <field name="remaining_month"/>
                        <field name="dosage_form"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_medicine_information" model="ir.actions.act_window">
        <field name="name">medicine Information</field>
        <field name="res_model">medicine.information</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="medicine_information"
            name="medicine"
            sequence="1"/>

    <menuitem id="medicine_information_deatils"
            name="medicine"
            parent="medicine_information"
            action="action_medicine_information"
            sequence="2"/>

<!--     <menuitem id="school_infomation_menu"
            name="Student"
            parent="school_management_deatils"
            action="action_student_information"
            sequence="3"/> -->


</odoo>